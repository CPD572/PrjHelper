#:import hex kivy.utils.get_color_from_hex

<ProjectsScreen>:
	BoxLayout:
	    orientation: 'horizontal'
        id: main_box
        spacing: 5
        canvas:
			Color:
				rgba: hex('#303030')
			Rectangle:
				size: self.size
				pos: self.pos
        ScrollView:
        	bar_width: '9dp'
        	TreeView:
        		id: scrolled_tree
        		size_hint_y: None
        		